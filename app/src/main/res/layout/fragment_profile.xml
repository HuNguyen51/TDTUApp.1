<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#26C6DA"
    tools:context=".Home.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        >
        <TextView
            android:id="@+id/tvUsernameInChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TDTER CONNECTION"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="15dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_logout"
            android:backgroundTint="#FFFFFF"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#B2EBF2"
        android:layout_below="@+id/topBar"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imAvatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/topBar"
        android:layout_marginTop="12dp"
        android:outlineAmbientShadowColor="@color/black"
        android:elevation="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/_56_3562377_personal_user"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imAvatar"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="Nguyễn Hưng"/>
    <TextView
        android:id="@+id/tvBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:background="#B2EBF2"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:text="Đây là tiểu sử của tôi"/>
    <LinearLayout
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBio"
        android:gravity="center"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:backgroundTint="#80DEEA"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginEnd="5dp"
            android:text="Chỉnh sửa trang cá nhân"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:backgroundTint="#80DEEA"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableRight="@drawable/ic_add_friend"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/studentID"
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:elevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#B2EBF2"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/im1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/student_card" />
                    <TextView
                        android:id="@+id/tvStudentID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im1"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="51900338"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/faculty"
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="5dp"

                android:layout_toRightOf="@+id/studentID"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:elevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2EBF2">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/im2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/faculty"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/tvFaculty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im2"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="Công Nghệ Thông Tin"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/email"
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:elevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2EBF2">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/im3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/email"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im3"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="hung@gmail.com"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/email"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:elevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2EBF2">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/im4"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/username"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im4"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="hunguyen"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>