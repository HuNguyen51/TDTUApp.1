<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.TrainingEvaluationFragment"
    android:background="#26C6DA">
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/tvUsernameInChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TDTER CONNECTION"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="15dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"
            android:backgroundTint="#FFFFFF"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/academic"
        android:layout_width="350dp"
        android:layout_height="215dp"
        android:layout_below="@+id/topBar"
        app:cardCornerRadius="30dp"
        android:layout_margin="5dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:layout_centerHorizontal="true"
        android:elevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/im1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/imager_7626"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im1"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Học thuật"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/activities"
        android:layout_width="350dp"
        android:layout_height="215dp"
        android:layout_below="@+id/academic"
        app:cardCornerRadius="30dp"
        android:layout_margin="5dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:layout_centerHorizontal="true"
        android:elevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/im2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/managinglarge_e1539227690646_15789674577711517121009"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im2"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Hoạt động"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/volunteer"
        android:layout_width="350dp"
        android:layout_height="215dp"
        android:layout_below="@+id/activities"
        app:cardCornerRadius="30dp"
        android:layout_margin="5dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:layout_centerHorizontal="true"
        android:elevation="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/im3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/volunteer_4"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im3"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Tình nguyện"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>